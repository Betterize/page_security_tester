{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@layouts/*": ["src/layouts/*"],
            "@typescript/*": ["src/typescript/*"]
        },
        // Needed for TypeScript intellisense in the template inside Vue files
        "jsx": "preserve",
        "verbatimModuleSyntax": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
