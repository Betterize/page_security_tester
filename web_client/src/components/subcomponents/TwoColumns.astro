---
interface Props {
  headline: string;
  description: string;
  image: string;
  image_left?: boolean;
}

const { headline, description, image, image_left = true } = Astro.props;
---

{
  () => {
    if (image_left) {
      return (
        <div class="grid mx-auto max-w-120 md:(grid-cols-2 gap-6 max-w-6xl)">
          <div class="flex items-center justify-center p-4 bg-gradient-to-br from-sky-700/70 via-purple-700/50 to-blue-600/40 rounded-t-xl md:rounded-xl">
            <img
              class="opacity-80 w-70 h-70"
              src={image}
              alt="descriptive text"
            />
          </div>

          <div class="grid p-4 bg-zinc-700/40 md:rounded-xl rounded-b-xl">
            <h2 class="flex items-center justify-center h-full text-4xl font-bold capitalize">
              {headline}
            </h2>
            <p class="text-gray-300">{description}</p>
          </div>
        </div>
      );
    } else {
      return (
        <div class="grid mx-auto max-w-120 md:(grid grid-cols-2 gap-6 max-w-6xl)">
          <div class="grid p-4 bg-zinc-700/40 md:rounded-xl rounded-b-xl">
            <h2 class="flex items-center justify-center h-full text-4xl font-bold capitalize">
              {headline}
            </h2>
            <p class="text-gray-300">{description}</p>
          </div>
          <div class="flex items-center justify-center p-4 bg-gradient-to-br from-sky-700/70 via-purple-700/50 to-blue-600/40 rounded-t-xl order-first md:(rounded-xl order-last)">
            <img
              class="opacity-80 w-70 h-70"
              src={image}
              alt="descriptive text"
            />
          </div>
        </div>
      );
    }
  }
}
